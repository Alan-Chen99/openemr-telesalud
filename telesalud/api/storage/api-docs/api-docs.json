{
    "openapi": "3.0.0",
    "info": {
        "title": "OpenEMR TeleSalud API",
        "version": "1.0"
    },
    "paths": {
        "/api/patients": {
            "get": {
                "tags": [
                    "Patient"
                ],
                "summary": "Obtener las información de todos los pacientes",
                "operationId": "showAllPatients",
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        },
        "/api/patient/{id}": {
            "get": {
                "tags": [
                    "Patient"
                ],
                "summary": "Obtener las información de un paciente por su número de identificación",
                "operationId": "showOnePatient",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del paciente",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        },
        "/api/patient/{id}/encounters": {
            "get": {
                "tags": [
                    "Patient"
                ],
                "summary": "Obtener las información de todas las consultas filtrado por identificación del paciente",
                "operationId": "showAllEncountersByPatient",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del paciente",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        },
        "/api/patient/{id}/encounters/{encounterId}": {
            "get": {
                "tags": [
                    "Patient"
                ],
                "summary": "Obtener las información de un consulta por id filtrado por identificación del paciente",
                "operationId": "showPatientEncounterById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del paciente",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "encounterId",
                        "in": "path",
                        "description": "ID de la consulta",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        }
    }
}